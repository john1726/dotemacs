int CIMACDoc::GetVirtualVolumeCount()
{
	int fileCount = 0;
	int vvCount = GetVVAttributeCount();
	for (int i = 0; i < vvCount; i++){
		CVVAttribute &vvAttr = GetVVAttributeRef(i);
		fileCount += vvAttr.GetVVCount();
	}
	return fileCount; 
}

