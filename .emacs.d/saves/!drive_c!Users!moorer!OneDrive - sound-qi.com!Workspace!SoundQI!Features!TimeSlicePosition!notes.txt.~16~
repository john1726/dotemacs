float GetWellWidth() { return m_fWellWidth; }

int CIMACDoc::GetWellWidthPixels(CWell *pWell)
{ 
	float width = 0;
	if (pWell != NULL && pWell->GetCurveWidth() > 0) {
		width = pWell->GetCurveWidth();
	} else {
		width = m_fWellWidth;
	}
	return (int) (width * (float)DPI);
}

