									currTime = (float)pDoc->GetFlatteningDatum();
								}
								if (currTime < tstart || (tend && currTime > tend)) continue;
								prevTime -= tstart;
								currTime -= tstart;
								yPrev = TOP + (int)(prevTime / si * 1000 * m_vScale) + (int)(m_vScale / 2.0);
